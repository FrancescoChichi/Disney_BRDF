{
    "$schema": "http://json-schema.org/draft-04/schema",
    "name": "glTFScene",
    "type": "object",
    "description": "The root nodes of a scene.",
    "base": "glTFChildOfRootProperty",
    "properties": {
        "nodes": {
            "type": "vector<glTFid<glTFNode>>",
            "description": "The indices of each root node.",
            "uniqueItems": true,
            "minItems": 1
        }
    }
}
